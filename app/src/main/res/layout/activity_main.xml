<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/negro"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:paddingBottom="32dp">

    <TextView
        android:id="@+id/resultadoText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="end"
        android:padding="16dp"
        android:text="0"
        android:textColor="@color/blanco"
        android:textSize="60sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonAC"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gris"
                android:text="AC"
                android:textColor="@color/blanco"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonMenosMas"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gris"
                android:text="+/-"
                android:textColor="@color/blanco"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonPorcentaje"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gris"
                android:text="%"
                android:textColor="@color/blanco"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonDivide"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/naranja"
                android:text="รท"
                android:textColor="@color/blanco"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="7"
                android:textColor="@color/blanco"
                android:backgroundTint="@color/gris"
                android:textSize="24sp" />
            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="8"
                android:textColor="@color/blanco"
                android:backgroundTint="@color/gris"
                android:textSize="24sp" />
            <Button
                android:id="@+id/button9"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="9"
                android:textColor="@color/blanco"
                android:backgroundTint="@color/gris"
                android:textSize="24sp" />
            <Button
                android:id="@+id/buttonMultiplicacion"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/naranja"
                android:text="ร"
                android:textColor="@color/blanco"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="4"
                android:textColor="@color/blanco"
                android:backgroundTint="@color/gris"
                android:textSize="24sp" />
            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="5"
                android:textColor="@color/blanco"
                android:backgroundTint="@color/gris"
                android:textSize="24sp" />
            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="6"
                android:textColor="@color/blanco"
                android:backgroundTint="@color/gris"
                android:textSize="24sp" />
            <Button
                android:id="@+id/buttonMenos"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/naranja"
                android:text="-"
                android:textColor="@color/blanco"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="1"
                android:textColor="@color/blanco"
                android:backgroundTint="@color/gris"
                android:textSize="24sp" />
            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="2"
                android:textColor="@color/blanco"
                android:backgroundTint="@color/gris"
                android:textSize="24sp" />
            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="3"
                android:textColor="@color/blanco"
                android:backgroundTint="@color/gris"
                android:textSize="24sp" />
            <Button
                android:id="@+id/buttonMas"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/naranja"
                android:text="+"
                android:textColor="@color/blanco"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button0"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="2"
                android:text="0"
                android:textColor="@color/blanco"
                android:backgroundTint="@color/gris"
                android:textSize="24sp" />
            <Button
                android:id="@+id/buttonPunto"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="."
                android:textColor="@color/blanco"
                android:backgroundTint="@color/gris"
                android:textSize="24sp" />
            <Button
                android:id="@+id/buttonIgual"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/naranja"
                android:text="="
                android:textColor="@color/blanco"
                android:textSize="24sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
